generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Etudiant {
  id            String   @id @default(uuid())
  matricule     String   @unique
  nom           String
  prenom        String
  email         String   @unique
  password      String
  telephone     String?
  dateNaissance DateTime?
  filiere       String
  niveau        String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  inscriptions  Inscription[]
  paiements     Paiement[]
  reclamations  Reclamation[]
  justificatifs Justificatif[]
}

model Inscription {
  id              String   @id @default(uuid())
  etudiantId      String
  etudiant        Etudiant @relation(fields: [etudiantId], references: [id])
  typeInscription String
  anneeAcademique String
  matieres        String?  // JSON stringified list of subjects
  statut          String   @default("en_attente")
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model Paiement {
  id              String   @id @default(uuid())
  etudiantId      String
  etudiant        Etudiant @relation(fields: [etudiantId], references: [id])
  montant         Float
  typePaiement    String
  methodePaiement String
  recuUrl         String?  // URL of the uploaded receipt
  statutPaiement  String   @default("en_attente")
  createdAt       DateTime @default(now())
}

model Reclamation {
  id          String   @id @default(uuid())
  etudiantId  String
  etudiant    Etudiant @relation(fields: [etudiantId], references: [id])
  objet       String
  description String
  statut      String   @default("en_attente")
  createdAt   DateTime @default(now())
}

model Justificatif {
  id         String   @id @default(uuid())
  etudiantId String
  etudiant   Etudiant @relation(fields: [etudiantId], references: [id])
  motif      String
  dateDebut  DateTime
  dateFin    DateTime
  statut     String   @default("en_attente")
  createdAt  DateTime @default(now())
}