generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Etudiant {
  id            String         @id @default(uuid())
  matricule     String         @unique
  nom           String
  prenom        String
  email         String         @unique
  password      String
  telephone     String?
  dateNaissance DateTime?
  filiere       String
  niveau        String
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  inscriptions  Inscription[]
  justificatifs Justificatif[]
  paiements     Paiement[]
  reclamations  Reclamation[]
}

model Inscription {
  id              String   @id @default(uuid())
  etudiantId      String
  typeInscription String
  anneeAcademique String
  statut          String   @default("en_attente")
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  matieres        String?
  etudiant        Etudiant @relation(fields: [etudiantId], references: [id])
}

model Paiement {
  id              String   @id @default(uuid())
  etudiantId      String
  montant         Float
  typePaiement    String
  methodePaiement String
  statutPaiement  String   @default("en_attente")
  createdAt       DateTime @default(now())
  recuUrl         String?
  etudiant        Etudiant @relation(fields: [etudiantId], references: [id])
}

model Reclamation {
  id          String   @id @default(uuid())
  etudiantId  String
  objet       String
  description String
  statut      String   @default("en_attente")
  createdAt   DateTime @default(now())
  etudiant    Etudiant @relation(fields: [etudiantId], references: [id])
}

model Justificatif {
  id         String   @id @default(uuid())
  etudiantId String
  motif      String
  dateDebut  DateTime
  dateFin    DateTime
  statut     String   @default("en_attente")
  createdAt  DateTime @default(now())
  etudiant   Etudiant @relation(fields: [etudiantId], references: [id])
}
